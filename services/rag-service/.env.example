# Service Configuration
SERVICE_NAME=rag-service
SERVICE_PORT=8084
LOG_LEVEL=INFO
ENVIRONMENT=development

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=llmops
POSTGRES_PASSWORD=change_me_postgres_password
POSTGRES_DB=llmops

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_PRE_PING=true
DB_ECHO=false

# MinIO Configuration (Document Storage)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=change_me_minio_password
MINIO_SECURE=false
MINIO_BUCKET_DOCUMENTS=knowledge-docs

# Milvus Configuration (Vector Storage)
MILVUS_HOST=milvus
MILVUS_PORT=19530
MILVUS_COLLECTION_PREFIX=rag_

# Elasticsearch Configuration (Full-text Search)
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_INDEX_PREFIX=rag_

# Redis Configuration (Cache)
REDIS_URL=redis://redis:6379/0

# OpenAI Configuration (Embeddings)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Local Embedding Model (Alternative)
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2

# NATS Configuration (Message Queue)
NATS_URL=nats://nats:4222
NATS_MAX_RECONNECT_ATTEMPTS=60
NATS_RECONNECT_TIME_WAIT=2

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["*"]

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Pipeline Defaults
DEFAULT_CHUNK_SIZE=512
DEFAULT_CHUNK_OVERLAP=50
DEFAULT_TOP_K=5
